<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Microsoft Teams Hello World Sample App</title>
        <link rel="stylesheet" type="text/css" href="/styles/msteams-16.css">
        <link rel="stylesheet" type="text/css" href="/styles/custom.css">
        <script src="https://unpkg.com/@microsoft/teams-js/dist/MicrosoftTeams.min.js" crossorigin="anonymous"></script>
        <script src="/scripts/teamsapp.js"></script>
    </head>
    <body class="theme-light">
        <div class="surface">
            <div class="panel">
                <h1>Hello {{{ teamName }}}</h1>
                <div>
                    <input id="nameInput" placeholder="Employee name" name="name"/>
                    <button id="addEmployeeButton">Add</button>
                    <button id="display">Display</button>
                    <button id="buildTableButton">Build table</button>
                </div>
                <div>
                    <input id="locationInput" placeholder="Employee location" name="location"/>
                    <button id="addLocationButton">Add</button>
                </div>
                <div class="font-semibold font-title">Week</div>
                <table>
                    <tr id="tableHeaderRow">
                        <th>Day of Week</th>
                    </tr>
                    <tr>
                        <td>Monday</td>
                    </tr>
                    <tr>
                        <td>Tuesday</td>
                    </tr>
                    <tr>
                        <td>Wednesday</td>
                    </tr>
                    <tr>
                        <td>Thursday</td>
                    </tr>
                    <tr>
                        <td>Friday</td>
                    </tr>
                </table>
            </div>
        </div>
        </div>
        <script src="/scripts/table.js"></script>
    </body>
</html>
